{
  "name": "TAGML",
  "rules": {
    "document": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_chunk"
      }
    },
    "_chunk": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "start_tag"
        },
        {
          "type": "SYMBOL",
          "name": "end_tag"
        },
        {
          "type": "SYMBOL",
          "name": "milestone_tag"
        },
        {
          "type": "SYMBOL",
          "name": "text_variation"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "start_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "open_start_markup"
        },
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "start_layer_suffix"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "close_start_markup"
        }
      ]
    },
    "open_start_markup": {
      "type": "STRING",
      "value": "["
    },
    "close_start_markup": {
      "type": "STRING",
      "value": ">"
    },
    "end_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "open_end_markup"
        },
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "end_layer_suffix"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "close_end_markup"
        }
      ]
    },
    "open_end_markup": {
      "type": "STRING",
      "value": "<"
    },
    "close_end_markup": {
      "type": "STRING",
      "value": "]"
    },
    "milestone_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "open_start_markup"
        },
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "start_layer_suffix"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "close_end_markup"
        }
      ]
    },
    "start_layer_suffix": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "|"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "+"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SEQ",
            "members": [
              {
                "type": "STRING",
                "value": ","
              },
              {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "STRING",
                    "value": "+"
                  },
                  {
                    "type": "BLANK"
                  }
                ]
              },
              {
                "type": "SYMBOL",
                "name": "name"
              }
            ]
          }
        }
      ]
    },
    "end_layer_suffix": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "|"
        },
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SEQ",
            "members": [
              {
                "type": "STRING",
                "value": ","
              },
              {
                "type": "SYMBOL",
                "name": "name"
              }
            ]
          }
        }
      ]
    },
    "text_variation": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "begin_text_variation"
        },
        {
          "type": "SYMBOL",
          "name": "variant_text"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "text_variation_separator"
          }
        },
        {
          "type": "SYMBOL",
          "name": "end_text_variation"
        }
      ]
    },
    "begin_text_variation": {
      "type": "STRING",
      "value": "<|"
    },
    "text_variation_separator": {
      "type": "STRING",
      "value": "|"
    },
    "end_text_variation": {
      "type": "STRING",
      "value": "|>"
    },
    "variant_text": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "_chunk"
          },
          {
            "type": "PREC",
            "value": 3,
            "content": {
              "type": "PATTERN",
              "value": "[^[<\\|]+"
            }
          }
        ]
      }
    },
    "name": {
      "type": "PREC",
      "value": 1,
      "content": {
        "type": "PATTERN",
        "value": "[a-zA-Z]+"
      }
    },
    "text": {
      "type": "PREC",
      "value": 2,
      "content": {
        "type": "PATTERN",
        "value": "[^[<]+"
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s+"
    }
  ],
  "conflicts": [],
  "externals": [],
  "inline": []
}